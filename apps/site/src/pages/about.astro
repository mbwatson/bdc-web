---
import Base from "../layouts/Base.astro";
import InPageNav from "../components/layout/InPageNav.astro";
import { getCollection, render } from "astro:content";

const aboutEntries = await getCollection("pages", ({ id }) =>
  id.startsWith("about")
);
const entry = aboutEntries[0];
if (!entry) throw new Error("Could not find about page content");

const { Content, headings } = await render(entry);
---

<Base title="About | BioData Catalyst">
  <section class="usa-section">
    <div class="grid-container">
      <h1>{entry.data.title}</h1>
      <InPageNav headings={headings}>
        <Content />
      </InPageNav>
    </div>
  </section>
</Base>
